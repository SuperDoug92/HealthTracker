<br>

<div class="col-md-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Excercises</h3>
    </div>
    <div class="panel-body">
      <ul class="nav nav-pills nav-stacked">
        <li role="presentation" class="active"><%= link_to "Table", 'table' %></li>
        <li role="presentation"><%= link_to "Chart",'#',:id => 'chart' %></li>
        <li role="presentation"><%= link_to "Running", :id => 'running_chart' %></li>
        <li role="presentation"><%= link_to "Cycling", :id => 'cycling_chart' %></li>
        <li role="presentation"><%= link_to "Swimming", :id => 'swimming_chart' %></li>
    </div>
  </div>
</div>

<div class="col-md-9">
  <table class="table table-striped header-fixed">
    <thead>
      <tr>
        <th>Date</th>
        <th>Excercise</th>
        <th>Distance</th>
        <th>Duration</th>
        <th>Calories</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td> <%= item.start_time[0..-9]%> </td>
          <td> <%= item.type %> </td>
          <td> <%= "#{(item.total_distance/1609.34).round(2)} mi" %> </td>
          <td> <%= Time.at(item.duration ).utc.strftime("%H:%M:%S") %> </td>
          <td> <%= item.total_calories %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
